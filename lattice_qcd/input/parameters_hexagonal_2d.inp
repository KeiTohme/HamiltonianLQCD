# Lattice QCD Parameters for 2D Hexagonal Lattice Test
# This is a test case for studying gluon dynamics on a hexagonal lattice

# Physical parameters
g = 1.0                    # Gauge coupling constant
m_fermion = 0.1           # Fermion mass
Nc = 2                    # Number of colors (SU(2) for simplicity)
D_euclid = 2              # 2D system

# Lattice parameters
Nsize = 6 6               # Small hexagonal lattice
lattice_type = hexagonal  # Hexagonal geometry
fermion_type = staggered  # Staggered fermions work well in 2D

# Time evolution parameters
dt = 0.01                 # Time step
n_steps = 500            # Shorter run for test
measure_interval = 10     # Frequent measurements

# Parallelization options
use_mpi = false          # Single process for test
use_openmp = true        # Use OpenMP if available
n_threads = 2            # Just 2 threads for test

# Advanced options
use_tensor_network = false      # Standard simulation
use_quantum_computer = false    # Standard simulation
tn_backend = none
qc_backend = none

# Output options
output_dir = ./output/hexagonal_test
save_configurations = true
save_interval = 50